<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ola"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PedidoAssistencia"
    android:padding="16dp">

    <TextView
        android:id="@+id/assunto_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:layout_marginTop="20sp"
        android:text="Assunto: ">
    </TextView>

    <EditText
        android:id="@+id/assunto"
        android:layout_width="match_parent"
        android:layout_marginTop="5sp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/assunto_tv">
    </EditText>

    <TextView
        android:id="@+id/mensagem_tv"
        android:layout_width="wrap_content"
        android:layout_marginTop="20sp"
        android:textSize="19sp"
        android:layout_below="@+id/assunto"
        android:layout_height="wrap_content"
        android:text="Mensagem: ">
    </TextView>

    <EditText
        android:id="@+id/mensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_below="@+id/assunto"
        android:layout_toRightOf="@+id/mensagem_tv">
    </EditText>

    <TextView
        android:id="@+id/localizacao_tv"
        android:layout_below="@+id/mensagem"
        android:layout_marginTop="50sp"
        android:textSize="19sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localização: ">
    </TextView>

    <EditText
        android:id="@+id/localizacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35sp"
        android:layout_below="@+id/mensagem"
        android:layout_toRightOf="@+id/localizacao_tv">
    </EditText>

    <Button
        android:id="@+id/button_pedido"
        android:layout_below="@id/localizacao"
        android:layout_marginTop="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Pedido"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
